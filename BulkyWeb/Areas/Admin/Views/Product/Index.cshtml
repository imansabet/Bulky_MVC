@model List<Product>


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle-dotted"></i> Create New Product
            </a>
        
        </div>
    </div>
    <table class="table table-boarded table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>ISBN</th>
                <th>Price</th>
                <th>Author</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model )
            {
                <tr>
                    <td>@obj.Title</td>
                    <td>@obj.ISBN</td>
                    <td>@obj.ListPrice</td>
                    <td>@obj.Author</td>
                    <td>@obj.Category.Name</td>
                    <td></td>

                    <td>
                        <div class="w-75 " role="group">
                            <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn mx-2 mt-2"><i class="bi bi-pencil-fill">Edit</i></a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn  mx-2 bg-danger text-white mt-2"><i class="bi bi-trash3-fill">Delete</i></a>

                        </div>
                    </td>
                </tr>
            }
        
        </tbody>
    </table>
</div>
